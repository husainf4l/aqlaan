generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String   // "client" | "consultant" | "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessionsAsClient    Session[] @relation("ClientSessions")
  sessionsAsConsultant Session[] @relation("ConsultantSessions")
  messages            Message[]

  @@map("users")
}

model Session {
  id            String   @id @default(cuid())
  consultantId  String
  clientId      String
  startTime     DateTime
  endTime       DateTime?
  status        String   @default("waiting") // "waiting" | "active" | "ended"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  consultant    User     @relation("ConsultantSessions", fields: [consultantId], references: [id])
  client        User     @relation("ClientSessions", fields: [clientId], references: [id])
  messages      Message[]

  @@map("sessions")
}

model Message {
  id         String   @id @default(cuid())
  sessionId  String
  senderId   String
  content    String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  // Relations
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sender     User     @relation(fields: [senderId], references: [id])

  @@map("messages")
}
